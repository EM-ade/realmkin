rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function signedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }
    function isAdmin() {
      return signedIn() && exists(/databases/$(db)/documents/adminUids/$(request.auth.uid));
    }

    // -------- User profile --------
    match /users/{uid} {
      allow read: if true;
      allow create, update: if isOwner(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    // Map username -> uid (can be updated when user changes username)
    match /usernames/{username} {
      allow read: if true;
      allow create: if signedIn();
      allow update: if false; // Username mappings shouldn't be updated, only created/deleted
      allow delete: if signedIn() && resource.data.uid == request.auth.uid; // Allow users to delete their own old username mapping
    }

    // Map wallet -> uid (immutable)
  match /wallets/{address} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    // -------- Staking --------
    match /users/{uid}/stakes/{stakeId} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid);
      allow write: if false; // backend / admin SDK only
    }
    // Optional staking record mirror
    match /staking_records/{docId} {
      // read: owner or admin
      allow read: if isAdmin() ||
                  (signedIn() && resource.data.wallet == request.auth.uid);

      // allow the owner (based on wallet in request) to create
      allow create: if signedIn() &&
                    request.resource.data.wallet == request.auth.uid;

      // no updates / deletes from the client
      allow update, delete: if false;
    }

    // -------- Rewards & Records --------
    match /userRewards/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow create, update: if isOwner(uid) || isAdmin();
      allow delete: if isAdmin();
    }

    match /claimRecords/{claimId} {
      allow read: if isAdmin() || (signedIn() && (resource.data.userId == request.auth.uid || (resource.data.walletAddress != null && exists(/databases/$(db)/documents/wallets/$(resource.data.walletAddress)) && get(/databases/$(db)/documents/wallets/$(resource.data.walletAddress)).data.uid == request.auth.uid)));
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Transaction history (subcollection structure)
    match /transactionHistory/{userId}/transactions/{transactionId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Staking transactions (backend collection - read only for users)
    match /staking_transactions/{transactionId} {
      allow read: if signedIn() && resource.data.user_id == request.auth.uid;
      allow write: if false; // Backend/Admin SDK only
    }

    match /transferRecords/{id} {
      allow read: if isAdmin() || (signedIn() && (resource.data.senderUserId == request.auth.uid || resource.data.recipientUserId == request.auth.uid));
      allow create: if signedIn() && request.resource.data.senderUserId == request.auth.uid;
      allow update, delete: if false;
    }

    match /rateLimits/{uid} {
      allow read, write: if isOwner(uid) || isAdmin();
    }

    // -------- Gameplay data --------
    match /kingdoms/{kingdomId} {
      allow read: if true;
      allow create, update: if signedIn() && request.resource.data.owner == request.auth.uid;
      allow delete: if false;
    }

    match /empires/{empireId} {
      allow read: if true;
      allow create, update: if signedIn() && request.resource.data.owner == request.auth.uid;
      allow delete: if false;
    }

    // -------- Leaderboards & Meta --------
    match /leaderboards/current/totalScore/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }
    match /leaderboards/current/streak/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }
    match /leaderboards/current/metadata/{docId} {
      allow read: if true;
      allow write: if signedIn();
    }
    match /userStats/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId) || isAdmin();
      allow delete: if false;
    }
    match /leaderboards/{doc=**} {
      allow read: if true;
      allow write: if false;
    }
    match /monthlyArchive/{docId} {
      allow read: if true;
      allow write: if signedIn();
    }
    match /meta/{doc} {
      allow read: if true;
      allow write: if false;
    }

    match /adminConfig/{docId} {
      allow read, write: if false;
    }
    match /adminUids/{docId} {
      allow read, write: if false;
    }

    // -------- Contract bonus / welcome grants (public read) --------
    match /contractBonusConfigs/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /contractWelcomeGrants/{id} {
      allow read: if true;
      allow create, update: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    // Deny any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}