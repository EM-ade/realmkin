rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admins can read all user data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.token.address in ['0xAdminWallet1', '0xAdminWallet2', 'ABjnax7QfDmG6wR2KJoNc3UyiouwTEZ3b5tnTrLLyNSp', 'F1p6dNLSSTHi4QkUkRVXZw8QurZJKUDcvVBjfF683nU'];
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only read their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Usernames collection for username availability checks
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null;
    }

    // Wallets collection for wallet-to-UID mapping
    match /wallets/{walletAddress} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}