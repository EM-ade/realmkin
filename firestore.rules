rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {

    function signedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // -------- User profile --------
    match /users/{uid} {
      allow read: if signedIn();
      allow create, update: if isOwner(uid);
      allow delete: if false;
    }

    // Map username -> uid (immutable)
    match /usernames/{username} {
      allow read: if true;
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    // Map wallet -> uid (immutable)
    match /wallets/{address} {
      allow read: if signedIn();
      allow create: if signedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    // -------- Staking --------
    match /users/{uid}/stakes/{stakeId} {
      allow read: if isOwner(uid);
      allow write: if false; // backend / admin SDK only
    }

    match /staking_records/{docId} {
      allow read: if signedIn() && resource.data.wallet == request.auth.uid;
      allow write: if false;
    }

    match /userRewards/{uid} {
      allow read: if isOwner(uid);
      allow write: if false;
    }

    match /claimRecords/{claimId} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    match /transactionHistory/{id} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    match /transferRecords/{id} {
      allow read: if signedIn() && (resource.data.senderUserId == request.auth.uid || resource.data.recipientUserId == request.auth.uid);
      allow write: if false;
    }

    match /rateLimits/{uid} {
      allow read, write: if isOwner(uid);
    }

    // -------- Gameplay data --------
    match /kingdoms/{kingdomId} {
      allow read: if true;
      allow create, update: if signedIn() && request.resource.data.owner == request.auth.uid;
      allow delete: if false;
    }

    match /empires/{empireId} {
      allow read: if true;
      allow create, update: if signedIn() && request.resource.data.owner == request.auth.uid;
      allow delete: if false;
    }

    // -------- Leaderboards & Meta (read-only) --------
    match /leaderboards/{doc=**} {
      allow read: if true;
      allow write: if false;
    }
    match /monthlyArchive/{docId} {
      allow read: if true;
      allow write: if false;
    }
    match /meta/{doc} {
      allow read: if true;
      allow write: if false;
    }

    // -------- Admin / Config (locked) --------
    match /adminConfig/{docId} {
      allow read, write: if false;
    }
    match /adminUids/{docId} {
      allow read, write: if false;
    }

    // -------- Contract bonus / welcome grants (public read) --------
    match /contractBonusConfigs/{id} {
      allow read: if true;
      allow write: if false;
    }
    match /contractWelcomeGrants/{id} {
      allow read: if true;
      allow write: if false;
    }

    // Deny any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}